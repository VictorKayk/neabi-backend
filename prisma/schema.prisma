generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id
  name        String
  email       String   @unique
  password    String?
  accessToken String   @unique
  createdAt   DateTime
  updatedAt   DateTime
  isVerified  Boolean
  isDeleted   Boolean

  userHasRoles      UserHasRoles[]
  VerificationToken VerificationToken[]
}

model Role {
  id        String   @id
  role      String   @unique
  createdAt DateTime
  updatedAt DateTime
  isDeleted Boolean

  userHasRoles UserHasRoles[]
}

model UserHasRoles {
  userId    String
  roleId    String
  createdAt DateTime
  updatedAt DateTime
  isDeleted Boolean

  user  User @relation(fields: [userId], references: [id])
  roles Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model VerificationToken {
  userId    String
  token     String   @unique
  createdAt DateTime
  expiresAt DateTime
  isDeleted Boolean

  user User @relation(fields: [userId], references: [id])

  @@id([userId])
}
